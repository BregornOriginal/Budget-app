<section class='new_category_container'>
  <%= form_with(model: budget, url: group_budgets_url(@group)) do |form| %>
    <% if budget.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(budget.errors.count, "error") %> prohibited this budget from being saved:</h2>

        <ul>
          <% budget.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
  <section class='new_category_form'>
    <div class="field">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :amount, style: "display: block" %>
      <%= form.number_field :amount %>
    </div>

      <p>Choose a category</p>
    <div class="checkbox_field">
      <%= form.collection_check_boxes :groups, Group.all, :id, :name %>
    </div>

    <div class="field">
      <%= form.submit "SAVE", class: "new_category_button"%>
    </div>
  </section>
  <% end %>
</section>
